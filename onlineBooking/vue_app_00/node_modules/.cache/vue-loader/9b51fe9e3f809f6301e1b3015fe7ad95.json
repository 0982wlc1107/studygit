urceRoot":"src\\components\\xz","sourcesContent":["<template>\r\n   <div class=\"product_app\">\r\n     <div class=\"goods-item\" v-for=\"(item,i) of list\" :key=\"i\">\r\n      <img :src=\"'http://127.0.0.1:3000/img/'+item.img_url\">\r\n      <h5>{{item.title}}</h5>\r\n      <div class=\"info\">\r\n        <span class=\"now\">{{item.price}}</span>\r\n      </div>\r\n     </div>\r\n     <!--按钮-->\r\n     <mt-button size=\"large\" type=\"primary\" @click=\"loadMore\">加载更多</mt-button>\r\n   </div>  \r\n</template>\r\n<script>\r\n  export default {\r\n    data(){\r\n      return {\r\n        list:[],\r\n        pno:0,\r\n        pageSiz:4\r\n      }\r\n    },\r\n    methods:{\r\n      loadMore(){//加载更多的数据\r\n        var url = \"product\";\r\n        this.pno++;//将当前页码加1，实现通过按钮加载更多\r\n        // 创建参数对象\r\n        var obj={pno:this.pno,pageSize:this.pageSize};\r\n        this.axios.get(url,{params:obj}).then(result=>{\r\n          //17:52\r\n          console.log(result.data);\r\n          // this.list = result.data.data;\r\n          if(this.pno>=result.data.pc){\r\n            this.$messagebox(\"提示\",\"到底啦~\")\r\n            return;\r\n          }else{\r\n            // 追加数据，而不是覆盖数据\r\n            // 数组1.concat.数组2->数组的拼接\r\n            this.list=this.list.concat(result.data.data);\r\n          }\r\n\r\n        })\r\n      }\r\n    },\r\n    created() {\r\n       this.loadMore(); // 创建完成后，自动运行loadMore()\r\n    },\r\n  }  \r\n</script>\r\n\r\n<style scoped>\r\n.product_app{\r\n  display:flex;\r\n  flex-wrap:wrap; /* 子元素换行 */\r\n  justify-content:space-between;\r\n  padding:4px;\r\n}\r\n.goods-item{\r\n  width:49%; /* 元素宽度 */\r\n  border:1px solid #ccc;\r\n  box-sizing:border-box;\r\n  margin:2px 0;\r\n  padding:2px;\r\n  display:flex;\r\n  flex-direction:column; /* 改变主轴方向为y轴 */\r\n  min-height:247px; /* 最小高度 */\r\n  border-radius:5px; /* 圆角 */\r\n}\r\n.product_app .goods-item img{\r\n  width:100%; /* 让商品图片充满父元素 */\r\n}\r\n</style>"]}]}